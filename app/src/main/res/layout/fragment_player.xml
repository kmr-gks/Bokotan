<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	tools:context=".PlayerFragment">

	<TextView
		android:id="@+id/fptvGenzai"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#F44336"
		android:textSize="20sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/fptvGogen"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:autoSizeTextType="uniform"
		android:maxLines="1"
		android:textAlignment="textEnd"
		android:textColor="@color/textcolor"
		android:textSize="40sp"
		app:layout_constraintBottom_toTopOf="@+id/fptvsubE"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/fplinearLayoutTextViews" />

	<TextView
		android:id="@+id/fptvsubJ"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:autoSizeTextType="uniform"
		android:maxLines="1"
		android:textAlignment="textEnd"
		android:textColor="@color/textcolor"
		android:textSize="26sp"
		app:layout_constraintBottom_toTopOf="@+id/fplinearLayoutButtons"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/fpbuttonStartStop" />

	<TextView
		android:id="@+id/fptvsubE"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:autoSizeTextType="uniform"
		android:maxLines="1"
		android:textAlignment="textEnd"
		android:textColor="@color/textcolor"
		android:textSize="26sp"
		app:layout_constraintBottom_toTopOf="@+id/fptvsubJ"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<LinearLayout
		android:id="@+id/fplinearLayoutButtons"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintBottom_toTopOf="@+id/fplinearLayoutSeekBars"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<Button
			android:id="@+id/fpbuttonSaisho"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="最初から"
			android:textColor="@color/buttontext"
			android:textSize="16sp" />

		<Button
			android:id="@+id/fpbuttonBangouHenkou"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="番号変更"
			android:textColor="@color/buttontext"
			android:textSize="16sp" />

		<Button
			android:id="@+id/fpbuttonPIP"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="PIP"
			android:textColor="@color/buttontext"
			android:textSize="16sp" />

		<Button
			android:id="@+id/fpbuttonStartStop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="start"
			android:textColor="@color/buttontext" />

	</LinearLayout>

	<TextView
		android:id="@+id/fptextViewNumSeikairitu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:autoSizeTextType="uniform"
		android:textColor="@color/textcolor"
		app:layout_constraintBottom_toBottomOf="@+id/fptvGenzai"
		app:layout_constraintStart_toEndOf="@+id/fptvGenzai"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/fptextViewSeikaisuu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:autoSizeTextType="uniform"
		android:textColor="@color/textcolor"
		app:layout_constraintBottom_toBottomOf="@+id/fptvGenzai"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<LinearLayout
		android:id="@+id/fplinearLayoutSeekBars"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintBottom_toTopOf="@+id/fplinearLayoutTextSeekBar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<SeekBar
			android:id="@+id/fpseekBarEng"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:contentDescription="@string/seekBarStrEng"
			android:max="10"
			android:minHeight="48dp"
			android:progress="5" />

		<SeekBar
			android:id="@+id/fpseekBarJpn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:contentDescription="@string/seekBarStrJpn"
			android:max="10"
			android:minHeight="48dp"
			android:progress="10" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/fplinearLayoutTextSeekBar"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintBottom_toTopOf="@+id/fptextViewPath"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<TextView
			android:id="@+id/fptvSeekBarEng"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="0.5"
			android:textColor="@color/textcolor"
			android:textSize="26sp" />

		<TextView
			android:id="@+id/fptvSeekBarJpn"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="0.5"
			android:textColor="@color/textcolor"
			android:textSize="26sp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/fplinearLayoutTextViews"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:orientation="vertical"
		app:layout_constraintBottom_toTopOf="@+id/fptvsubE"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/fptvGenzai">

		<TextView
			android:id="@+id/fpTextViewEng"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:autoSizeMaxTextSize="60sp"
			android:autoSizeTextType="uniform"
			android:textAlignment="center"
			android:textColor="@color/textcolor"
			android:textSize="36sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/fptextViewHatsuonKigou"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.5"
			android:autoSizeMaxTextSize="60sp"
			android:autoSizeTextType="uniform"
			android:textAlignment="center"
			android:textColor="@color/textcolor" />

		<TextView
			android:id="@+id/fpTextViewJpn"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:autoSizeMaxTextSize="60sp"
			android:autoSizeTextType="uniform"
			android:textAlignment="center"
			android:textColor="@color/textcolor"
			android:textSize="36sp"
			android:textStyle="bold" />
	</LinearLayout>

	<TextView
		android:id="@+id/fptextViewPath"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:autoSizeTextType="uniform"
		android:lines="1"
		android:textAlignment="viewStart"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>