<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	tools:context=".Q_sentaku_activity">

	<Switch
		android:id="@+id/switchSkipOboe"
		android:layout_width="wrap_content"
		android:layout_height="48dp"
		android:checked="true"
		android:text="Skip覚え"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/switchHyojiYakuBeforeRead" />

	<TextView
		android:id="@+id/textViewNowInput"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="now="
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/buttonAlarm" />

	<EditText
		android:id="@+id/editTextNumber"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="number"
		app:layout_constraintEnd_toStartOf="@+id/switchHyojiYakuBeforeRead"
		app:layout_constraintStart_toEndOf="@+id/textViewNowInput"
		app:layout_constraintTop_toBottomOf="@+id/buttonAlarm" />

	<Switch
		android:id="@+id/switchSkipMaruBatu"
		android:layout_width="wrap_content"
		android:layout_height="48dp"
		android:checked="true"
		android:text="SkipMarubatu"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/switchSkipOboe" />

	<Button
		android:id="@+id/button1Q"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onSelectQ"
		android:text="1q"
		app:layout_constraintEnd_toStartOf="@+id/buttonP1Q"
		app:layout_constraintTop_toTopOf="@+id/buttonP1Q" />

	<Button
		android:id="@+id/buttonP1Q"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onSelectQ"
		android:text="p1q"
		app:layout_constraintEnd_toStartOf="@+id/button2q"
		app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

	<LinearLayout
		android:id="@+id/linearLayout7"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<RadioButton
				android:id="@+id/radioButtonA"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="A" />

			<RadioButton
				android:id="@+id/radioButtonB"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="B" />

			<RadioButton
				android:id="@+id/radioButtonC"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="C" />

			<RadioButton
				android:id="@+id/radioButtonJ"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="熟語" />

			<RadioButton
				android:id="@+id/radioButtonAll"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:checked="true"
				android:onClick="onRadioChecked"
				android:text="全て" />

		</RadioGroup>

		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<RadioButton
				android:id="@+id/radioButtonV"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="動詞" />

			<RadioButton
				android:id="@+id/radioButtonN"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="名詞" />

			<RadioButton
				android:id="@+id/radioButtonAj"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="形容詞" />

			<RadioButton
				android:id="@+id/radioButtonM"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:checked="true"
				android:onClick="onRadioChecked"
				android:text="まとめ" />

			<RadioButton
				android:id="@+id/radioButton"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="RadioButton"
				android:visibility="invisible" />


		</RadioGroup>

		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<RadioButton
				android:id="@+id/radioButtonW"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:checked="true"
				android:onClick="onRadioChecked"
				android:text="words" />

			<RadioButton
				android:id="@+id/radioButtonP"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="phrases" />

			<RadioButton
				android:id="@+id/radioButtonT"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="乱数テスト" />

			<RadioButton
				android:id="@+id/radioButtonExclusiveTest"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="排他テスト"
				android:visibility="visible" />

			<RadioButton
				android:id="@+id/radioButtonSortTest"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:onClick="onRadioChecked"
				android:text="順番テスト"
				android:visibility="visible" />
		</RadioGroup>

	</LinearLayout>

	<Switch
		android:id="@+id/switchHyojiYakuBeforeRead"
		android:layout_width="wrap_content"
		android:layout_height="48dp"
		android:checked="false"
		android:text="読む前に表示"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/buttonP1Q" />

	<RadioGroup
		android:id="@+id/radioGroup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextNumber">

		<RadioButton
			android:id="@+id/radioButtonEtoJ"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:checked="true"
			android:text="英→日" />

		<RadioButton
			android:id="@+id/radioButtonJtoE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="日→英" />
	</RadioGroup>

	<Button
		android:id="@+id/buttonAlarm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onAlarmset"
		android:text="alarm"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/buttonP1Q" />

	<Switch
		android:id="@+id/switchSort"
		android:layout_width="wrap_content"
		android:layout_height="48dp"
		android:text="ソート反転"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/switchSkipMaruBatu" />

	<Button
		android:id="@+id/button2q"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onSelectQ"
		android:text="2q"
		app:layout_constraintEnd_toStartOf="@+id/buttonP2q"
		app:layout_constraintTop_toTopOf="@+id/buttonP1Q" />

	<Button
		android:id="@+id/buttonP2q"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onSelectQ"
		android:text="p2q"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

</androidx.constraintlayout.widget.ConstraintLayout>