<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/background">

		<TextView
			android:id="@+id/textViewMondai"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:contentDescription="@string/choice"
			app:layout_constraintBottom_toTopOf="@+id/buttonSelect1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<Button
			android:id="@+id/buttonSelect1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:contentDescription="@string/choice"
			app:layout_constraintBottom_toTopOf="@+id/buttonSelect2"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<Button
			android:id="@+id/buttonSelect2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:contentDescription="@string/choice"
			app:layout_constraintBottom_toTopOf="@+id/buttonSelect3"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<Button
			android:id="@+id/buttonSelect3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:contentDescription="@string/choice"
			app:layout_constraintBottom_toTopOf="@+id/buttonSelect4"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<Button
			android:id="@+id/buttonSelect4"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:contentDescription="@string/choice"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>